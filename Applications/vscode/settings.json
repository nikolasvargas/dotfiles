{
    "editor.fontSize": 14,
    "editor.renderWhitespace": "boundary",
    "editor.renderLineHighlight": "gutter",
    "editor.wordWrap": "off",
    "editor.renderIndentGuides": false,
    "editor.minimap.enabled": false,
    "editor.codeLens": false,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "editor.rulers": [79],
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "DesertEx",
    "workbench.colorCustomizations": {
        "activityBar.background": "#111",
        "editor.background": "#000",
        "sideBar.background": "#1B1B1B",
        "terminal.background": "#000",
        "terminal.foreground": "#DDD",
        "statusBar.background": "#3349FF",
        "statusBar.noFolderBackground": "#3349FF",
        "statusBar.debuggingBackground": "#3349FF"
    },

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.rendererType": "canvas",

    "vim.leader": ",",
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,

    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#3349FF",
    "vim.statusBarColors.insert": "#F04100",
    "vim.statusBarColors.visual": "#0BA938",
    "vim.statusBarColors.visualline": "#0BA938",
    "vim.statusBarColors.visualblock": "#0BA938",
    "vim.statusBarColors.replace": "#D08770",

    "vim.handleKeys": { 
        "<C-f>": false,
        "<C-w>": false,
        "<C-a>": false,
        "<C-b>": false
    },

    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["g","d"],
            "commands": ["actions.find"]
        }
    ],

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],

    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>","e"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "<space>"],
            "commands": [":noh"]
        },
        {
            "before": ["g", "f"],
            "commands": ["workbench.action.navigateBack"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "<C-l>"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "<C-h>"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "<C-j>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "<C-k>"]
        }
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.xib": true
    },

    "diffEditor.ignoreTrimWhitespace": false
}