{
    "editor.fontSize": 14,
    "editor.lineHeight": 18,
    "editor.fontFamily": "Hack",
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "gutter",
    "editor.wordWrap": "off",
    "editor.renderIndentGuides": false,
    "editor.minimap.enabled": false,
    "editor.codeLens": false,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "editor.rulers": [79],

    "workbench.colorTheme": "Monokai",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "editor.background": "#000000",
        "sideBar.background": "#111111",
        "sideBarSectionHeader.background": "#1B1D1E",
        "statusBar.background": "#1B1B1B",
        "statusBar.noFolderBackground": "#1B1B1B",
        "statusBar.debuggingBackground": "#1B1B1B",
        "terminal.background": "#000000",
        "terminal.foreground": "#DDDDDD"
    },

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Inconsolata-g for Powerline",
    "terminal.integrated.rendererType": "canvas",

    "vim.leader": ",",
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.statusBarColorControl": false,

    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],

    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>","e"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": ["<leader>", "<space>"],
            "commands": [
                ":noh"
            ]
        },
        {
            "before": ["g", "f"],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "<C-l>"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "<C-h>"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "<C-j>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "<C-k>"]
        }
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.xib": true
    },

    "diffEditor.ignoreTrimWhitespace": false,

    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    }
}